{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync → Build → Run (x86_64)",
      "type": "shell",
      "command": "scripts/sync.sh && scripts/build_remote.sh && scripts/run_remote.sh",
      "options": {
        "shell": {
          "executable": "/bin/zsh",
          "args": [
            "-i",
            "-c"
          ]
        }
      },
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}